<Study>
    name: 'study'
    FloatLayout:
        canvas:
            Color:
                rgba: 1,1,1,.9
            Rectangle
                pos: self.pos
                size: self.size 
        ActionBar:
            background_color: 0,.6,1,1
            id: ac2
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    with_previous: True
                    size_hint_x: None
                    width: self.height
                    on_release: root.manager.current = 'solo_menu'
                ActionLabel:
                    id: stal
                    #text: 'Study'
                    text_size: self.width  , None
        BoxLayout:
            id: stbox
            canvas:
                Color:
                    rgba: 1,1,1,.9
                Rectangle
                    pos: self.pos
                    size: self.size 
            size_hint: None , None
            x: root.width / 26
            width: root.width - 2 * self.x
            y: bl_ans.height + self.x
            height: root.height - ac2.height - bl_ans.height - 2 * self.x
            orientation: 'vertical'
            Label:
                id: lab1
                color: 0,0,0,1
                canvas:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.x+self.width/20 , self.y
                        size: self.width/1.1, 1
            Label:
                id: lab2
                color: 0,0,0,1
        BoxLayout:
            id: bl_ans
            size_hint: None , None
            x: stbox.x
            width: stbox.width
            y: root.height / 60
            spacing: root.width / 80
            height: root.height / 8

